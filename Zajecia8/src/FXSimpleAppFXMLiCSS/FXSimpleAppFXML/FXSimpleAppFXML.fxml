<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<GridPane fx:controller="FXSimpleAppFXML.FXSimpleAppFXML"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="gridPane">

    <Text text="Naciśnij przycisk aby zostać powitanym" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="Przywitaj się" GridPane.columnIndex="0" GridPane.rowIndex="1"
            alignment="BASELINE_CENTER" onAction="#buttonClickHandler" id="btn"/>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</GridPane>
